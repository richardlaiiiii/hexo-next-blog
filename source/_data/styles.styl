// 近期文章
.links-of-recent-posts
  font-size: 0.8125em
  margin-top: 10px

.links-of-recent-posts-title
  font-size: 1.03em
  font-weight: 600
  margin-top: 0

.links-of-recent-posts-list
  list-style: none
  margin: 0
  padding: 0

// 文章内超連結樣式
.post-body p a{
  color: #00c3ff; //超連結顏色(淺藍)
  border-bottom: none;
  border-bottom: 1px solid #00c3ff;
  &:hover {
    color: #0044ff; //滑鼠游標移到超連結上的顏色(深藍)
    border-bottom: none;
    border-bottom: 1px solid #0044ff;
  }
}